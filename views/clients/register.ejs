<% if(title) {%>
  <h1><%=title%></h1>
<% } %>

<% if(message) {%>
  <p><%=message%></p>
<% } %>

<% if(errors) {%>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
   <%  }) %>
  </ul>
<% } %>

<p>All inputs are requried</p>
<form action="/client/register" method="post">
  <label for="firstName">First Name</label>
  <input type="text" name="client_firstname" id="firstName" required value="<%= locals.client_firstname %>">
  <label for="lastName">Last Name</label>
  <input type="text" name="client_lastname" id="lastName" required value="<%= locals.client_lastname %>">
  <label for="email">Email Address</label>
  <input type="email" name="client_email" id="email" required value="<%= locals.client_email %>">
  <label for="password">Password</label>
  <p>*Password should include at least 12 characters, 1 capital letter, 1 number and 1 special character </p>
  <input type="password" name="client_password" id="password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
  <input type="submit" value="Submit">
</form>