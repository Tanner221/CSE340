<% if (title) { %>
  <h1><%= title %></h1>
<% } else { res.redirect('/') } %>

<% if (message) { %>
  <p class="notice"><%= message %></p>
<% } %>

<form action="/inv/addVehicle" method="post">
  <label for="inv_make">Make</label>
  <input type="text" name="inv_make" id="inv_make">
  <label for="inv_model">Model</label>
  <input type="text" name="inv_model" id="inv_model">
  <label for="inv_year">Year</label>
  <input type="text" name="inv_year" id="inv_year">
  <label for="inv_description">Description</label>
  <textarea name="inv_description" id="inv_description" cols="30" rows="5"><%= locals.client_lastname %></textarea>
  <label for="inv_image">Image Path</label>
  <input type="text" name="inv_image" id="inv_image" value="/images/vehicles/no-image.png">
  <label for="inv_thumbnail">Thumbnail Path</label>
  <input type="text" name="inv_thumbnail" id="inv_thumbnail" value="/images/vehicles/no-image-tn.png" value="<%= locals.inv_thumbnail %>">
  <label for="inv_price">Price</label>
  <input type="number" name="inv_price" id="inv_price" min="0.00" max="1000000" step="any">
  <label for="inv_miles">Miles</label>
  <input type="number" name="inv_miles" id="inv_miles">
  <label for="inv_color">Color</label>
  <input type="text" name="inv_color" id="inv_color">
  <label for="classification_id">Classification</label>
  <%- dropdown %>
  <input type="submit" value="Add Vehicle">
</form>